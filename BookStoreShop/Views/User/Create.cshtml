@using BookStoreShop.Models.Domain.Entities.UserAgg.ViewModels
@model CreateUserViewModel;
@{
    ViewData["Title"] = "ایجاد کاربر جدید";
    Layout = "_CustomLayout";
}
@section styles{
    <link rel="Stylesheet" type="text/css" href="/css/customCss.css" asp-append-version="true" />
}

<div class="container">
    <form method="post" asp-action="create" enctype="multipart/form-data">
        <div class="form-group">
            <label>نام و نام خانوادگی</label>
            <input type="text" asp-for="FullName" />
        </div>
        <div class="form-group">
            <label>نام کاربری</label>
            <input type="text" asp-for="UserName" />
        </div>
        <div class="form-group">
            <label>رمز عبور</label>
            <input type="password" asp-for="Password" />
        </div>
        <div class="form-group">
        <label>دسته‌بندی</label>
        <select asp-for="Role">
            <option value="" disabled selected>انتخاب کنید</option>
            <option value="0">مدیر</option>
            <option value="1">کاربر عادی</option>
        </select>
        </div>
        
        <div class="form-group">
            <label>تصویر</label>
            <input asp-for="ImageFile" type="file" />
        </div>
        <div class="form-buttons">
            <button type="submit">ایجاد</button>
            <button type="reset" class="reset-btn">پاک کردن</button>
        </div>
    </form>
    <div class="error">
        @ViewBag.UserExist
    </div>
</div>

