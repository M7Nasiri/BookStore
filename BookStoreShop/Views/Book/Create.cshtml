@using BookStoreShop.Models.Domain.ViewModels.Book
@model CreateBookViewModel
@{
    ViewData["Title"] = "ایجاد کتاب";
    Layout = "_CustomLayout";
}
@section styles {
    <link rel="Stylesheet" type="text/css" href="/css/customCss.css" />
}

<div class="container">
    <form method="post" asp-action="create" enctype="multipart/form-data">
        <div class="form-group">
            <label>عنوان</label>
            <input type="text" asp-for="Title" />
        </div>
        <div class="form-group">
            <label>نویسنده</label>
            <input type="text" asp-for="Author" />
        </div>
        <div class="form-group">
            <label>صفحات کتاب</label>
            <input type="text" asp-for="PageCount" />
        </div>
        <div class="form-group">
            <label>قیمت</label>
            <input type="text" asp-for="Price" />
        </div>
        <div class="form-group">
            <label>سال انتشار</label>
            <input type="text" asp-for="PublishYear" />
        </div>
        <div class="form-group">
            <label>دسته‌بندی</label>
            <select asp-for="CategoryId">
                @foreach (var cat in ViewBag.Categories)
                {
                    <option value="@cat.Id">@cat.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>تصویر کتاب</label>
            <input asp-for="ImageFile" type="file" />
        </div>
        <div class="form-buttons">
            <button type="submit">ایجاد</button>
            <button type="reset" class="reset-btn">پاک کردن</button>
        </div>
    </form>
</div>


